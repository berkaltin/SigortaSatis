
@{
    ViewBag.Title = "Packet";
}

@if (Convert.ToBoolean(Session["IS_SYSADM"]))
{
    <div class="panel panel-default">
    <div class="panel-heading">Giriş Yapın</div>
    <div class="panel-body">

        <form enctype="multipart/form-data" class="form-horizontal" method="post" action="/Paket/PktAdd">
            <div class="form-group">
                <label for="fulname" class="col-sm-4 control-label">Paket Adı :</label>
                <input class="form-control col-xs-12" name="txtPKTNAME" placeholder="Paket Adı" />
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">Paket Fiyat :</label>
                <input class="form-control col-xs-12" name="txtPKTFIYAT" placeholder="Paket Fiyat" />
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">Paket Kategori :</label>
                @Html.DropDownList("PktTyp", null, "Tipi", new { @class = "form-control", @required = "" })
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">Paket Resmi :</label>
                <input type="file" id="file" name="file" />
            </div>
            <button class="btn btn-success col-sm-offset-4">Paket Kayıt</button>
        </form>
        @*@Html.Partial("Counter")*@
    </div>
</div>
}
